@import 'fluidity/fluidity'

html, body
  width 100%
  height 100%

#container
  grid(100%, 100%)
  height 100%
  background url('/assets/noise.png'), linear-gradient(from top to bottom, lighter-color3, lighten(lighter-color3,96%))
  background-repeat repeat, no-repeat

#game-details
  grid-space 15%
  .player1, .player2
    position relative
    h3
      text-align center
  .score
    width 100%
    text-align center
  .currentplayer
    &:before
      position absolute
      left 1em
      top 0.5em
      content '->'

#gameboard
  grid-space 65%
  margin-top 3em
  user-select none
  #dice-list
    grid-space 80%
    margin 0 10%
    height 30%
    h2
      display block
      width 100%
      height 100%
    .roller
      cursor pointer
      text-align center
    li
      position relative
      display block
      float left
      list-style none
      width 70px
      height 70px
      margin 1em
      border 1px solid black
      text-align center
      user-select none
      &.scorable
        background green
        cursor pointer
      &.triple1,
      &.triple2,
      &.triple3,
      &.triple4,
      &.triple5,
      &.triple6
        background yellow
      &.yahtzee
        background red
      &.keeper
        background white
        margin-top 4em
      &:before
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        content attr(data-value)
  #table
    grid-space 50%
    height 50%

#cheatsheet
  grid-space 20%
  font-size .9em
  ul
    margin 1em
    li
      list-style none
      margin 0

#leaderboard
  grid 100% 100%
  position absolute
  top 0
  left 0
  height 100%
  z-index 2
  background lighter-color1
  color white
  transition all 100ms linear

.hidden
  visibility hidden
  opacity 0
  z-index -1
  transition all 100ms linear
