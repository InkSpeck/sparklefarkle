@import 'fluidity/fluidity'

html, body
  width 100%
  height 100%

#container
  grid(100%, 100%)
  height 100%
  background url('/assets/noise.png'), linear-gradient(from top to bottom, lighter-color3, lighten(lighter-color3,96%))
  background-repeat repeat, no-repeat
#game-details
  grid-space 20%
  .player1, .player2
    position relative
    h3
      text-align center
  .score
    width 100%
    text-align center
  .currentplayer
    &:before
      position absolute
      left 1em
      top 0.5em
      content '->'

#gameboard
  grid-space 60%
  margin-top 3em
  user-select none
  #dice-list
    grid-space 100%
    height 50%
    h2
      display block
      width 100%
      height 100%
    .roller
      cursor pointer
      text-align center
    li
      display block
      float left
      list-style none
      width 70px
      height 70px
      margin 1em
      border 1px solid black
      text-align center
      user-select none
      &.scorable
        background green
        cursor pointer
      &.triple1,
      &.triple2,
      &.triple3,
      &.triple4,
      &.triple5,
      &.triple6
        background yellow
      &.yahtzee
        background red
      &.keeper
        background white
        margin-top 4em
      &:before
        content attr(data-value)
  #table
    grid-space 100%
    height 50%

#cheatsheet
  grid-space 20%
  font-size .9em
  ul
    margin 1em
    li
      list-style none
      margin 0
