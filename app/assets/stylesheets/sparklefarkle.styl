@import 'fluidity/fluidity'

html, body
  width 100%
  height 100%

#container
  grid(100%, 100%)
  height 100%
  background radial-gradient(at top left, lighten(gray, 85%),lighten(gray,55%))

#game-details
  grid-space 20%
  .player1, .player2
    position relative
    h3
      text-align center
  .score
    width 100%
    text-align center
  .currentplayer
    &:before
      position absolute
      left 1em
      top 0.5em
      content '->'

#dice-list
  grid-space 60%
  margin-top 3em
  .roller
    cursor pointer
    text-align center
  li
    display block
    float left
    list-style none
    width 100px
    height 100px
    margin 1em
    border 1px solid black
    text-align center
    cursor pointer
    &.scorable
      background green
    &.triple1,
    &.triple2,
    &.triple3,
    &.triple4,
    &.triple5,
    &.triple6
      background yellow
    &:before
      content attr(data-value)

#cheatsheet
  grid-space 20%
  font-size .9em
  ul
    margin 1em
    li
      list-style none
      margin 0
