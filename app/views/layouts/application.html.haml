!!!
%html
  %head
    %title= @title
    %meta(name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %link(rel="apple-touch-icon-precomposed" href="/assets/icon.png")
    %link(rel="apple-touch-startup-image" href="assets/phone-splash.png")
    %link(rel="apple-touch-startup-image" href="assets/landscape-launch.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)")
    %link(rel="apple-touch-startup-image" href="images/portrait-launch.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)")
    = stylesheet_link_tag "application"
    = csrf_meta_tags
  %body
    %div#notice.hidden
    %div#game-details
      %div.player1
        %h3 Player 1
        %div.score 0
      %div.player2
        %h3 Player 2
        %div.score 0
      %div#showrules
    %div#container
      = yield
  = javascript_include_tag "application"
